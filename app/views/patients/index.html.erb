<h3>Patients</h3>

<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'View All Patients', patients_path %></li>
  <li><%= link_to 'New Patient', new_patient_path %></li>
</ul>

<p id="notice"><%= notice %></p>

<table class="table table-responsive table-striped">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Name</th>
      <th>Room</th>
      <th>Check-in date</th>
      <th>Release date</th>
      <th>Hospital</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= link_to( image_tag(patient.avatar.url(:thumb)), patient) %></td>
        <td><%= patient.name %></td>
        <td><%= patient.room %></td>
        <td><%= patient.checkin_date %></td>
        <td><%= patient.release_date %></td>
        <td><%= Hospital.find(patient.hospital_id).name %></td>
        <td><%= link_to 'Show', patient, class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient), class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Destroy', patient, class: "btn btn-default btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_patient_path, class: "btn btn-success" do %>
  <i class="glyphicon glyphicon-plus"></i> New Patient
<% end %>

